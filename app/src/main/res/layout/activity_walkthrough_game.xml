<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalkthroughGame"
    tools:layout_editor_absoluteY="81dp">

    <GridView

        android:id="@+id/board"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="8dp"

        android:layout_marginEnd="8dp"

        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:numColumns="8"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/pieces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pieces"></GridView>

    <GridView

        android:id="@+id/pieces"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="8dp"

        android:layout_marginTop="8dp"

        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:numColumns="8"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></GridView>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="16dp"
        android:onClick="onNext"
        android:text="@string/Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pieces"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>